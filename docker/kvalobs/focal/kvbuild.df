#FROM kvfocal-builddep:latest 
FROM registry.met.no/obs/kvalobs/kvbuild/staging/focal-builddep:latest
VOLUME /src
VOLUME /build
WORKDIR /build

COPY GITREF /usr/share/kvalobs/VERSION
COPY . /src

RUN /src/configure --prefix=/usr --mandir=/usr/share/man --infodir=/usr/share/info  \
	    --localstatedir=/var --sysconfdir=/etc  \
      CFLAGS=-g && make && make install


ENTRYPOINT [ "/bin/bash"]
