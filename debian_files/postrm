#!/bin/sh
# postrm script for kvalobs
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

. /usr/share/debconf/confmodule

#BINDIR, BIN and DIR must be in sync with the respectives variables in postinst.

BINDIR="/usr/bin"
BIN="kv2kro kvAgregated kvDataInputd kvDataInputd_clt kvdbadmin 
     kvManagerd kvmgrclt kvQabased kvServiced kvstart kvstop 
     kvsynopclt kvsynopd kvsynopdbadmin kvsynopdbclt
     kvsynopd_initdb kvsynopdparse norcom2kv kvstart-postgres
     kvstop-postgres"

KVBINDIR="/usr/lib/kvalobs/bin"
KVBIN="check_kvsynopd.sh
       hirlam2kvalobs.sh
       kvdbadmin.sh
       kvsynopdbadmin.sh
       lam2kv.cron
       qabase_cron.sh
       save_last_month.sh
       synopdecoder_cron.sh"


ETC_FILES="kv_ctl.conf 
           kvcron
           lam2kv/metdat.1h    
           lam2kv/metdat.RR24         
           lam2kv/posdat.PP    
           lam2kv/pose.kvalobs
           lam2kv/metdat.PP    
           lam2kv/parameters.kvalobs  
           lam2kv/posdat.RR12  
           lam2kv/metdat.RR12  
           lam2kv/parmap.kvalobs      
           lam2kv/posdat.RR24  
           lam2kv/stations.kvalobs
           "


DIRS="/usr/share/kvalobs 
      /usr/share/kvalobs/db
      /usr/share/kvalobs/kvsynop 
      /usr/share/kvalobs/metadata 
      /etc/kvalobs
      /etc/kvalobs/lam2kv
      /var/kvalobs
      /var/kvalobs/norcom2kv
      /var/kvalobs/norcom2kv/data2kv
      /var/kvalobs/norcom2kv/tmp
      /var/kvalobs/lam2kv
      /var/kvalobs/lam2kv/log
      /var/kvalobs/lam2kv/upload
      /var/kvalobs/lam2kv/data
      /var/kvalobs/agregate
      /var/kvalobs/kvsynop
      /var/kvalobs/kvsynop/debug
      /var/kvalobs/log
      /var/kvalobs/log/decoders
      /var/kvalobs/log/decoders/SynopDecoder
      /var/kvalobs/log/kvsynopdbadmin
      /var/kvalobs/log/kvdbadmin
      /var/kvalobs/log/html
      /var/kvalobs/log/kvsynop
      /var/kvalobs/run
      /var/kvalobs/service
      /var/kvalobs/service/subscribers"     

SQLLITE_DB="/var/kvalobs/kvsynop/kvsynopd.sqlite
            /var/kvalobs/agregate/database.sqlite"

case "$1" in
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

  purge)
    for i in $BIN; do
        dpkg-statoverride --remove $BINDIR/$i
     done

    for i in $KVBIN; do
        dpkg-statoverride --remove $KVBINDIR/$i
     done

     for i in $DIRS; do
        dpkg-statoverride --remove $i
     done

     #Remove the cache databases.
     for i in $SQLLITE_DB; do
        dpkg-statoverride --remove $i
        rm -f $i 
     done
     for i in $ETC_FILES; do
	 dpkg-statoverride --remove /etc/kvalobs/$i
     done
     
     #Delete my debconf entries in the database.
     db_purge || true

     update-rc.d kvalobs remove || true
   
     ;;
   
    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


